<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class='container'>
        <div id="listbox" class="header">
            <h2>To Do List</h2>
            <form action="/todo" method="POST">
                <input type="text" id="item" name="item" placeholder="Add task...">
                <span><button type="submit" class="addBtn">Add</button></span>
            </form>
        </div>

        <div>
            <ul id="list"></ul>
            <% todos.forEach(todo => { %>
                <li onclick="removeTask(this)"><%= todo.name %></li>
            <% }); %>
        </div>
    </div>
    <script src="script.js"></script>
</body>
</html>
